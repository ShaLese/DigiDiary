---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  source: string;
  publishedAt: string;
  url: string;
  index: number;
}

const { title, description, imageUrl, source, publishedAt, index } = Astro.props;
const date = new Date(publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  <a href={`/article/${index}`} class="block">
    {imageUrl && (
      <img 
        src={imageUrl} 
        alt={title}
        class="w-full h-48 object-cover"
      />
    )}
    <div class="p-6">
      <h2 class="text-xl font-semibold mb-2 text-gray-900 hover:text-indigo-600">
        {title}
      </h2>
      <p class="text-gray-600 mb-4">{description}</p>
      <div class="flex justify-between items-center text-sm text-gray-500">
        <span>{source}</span>
        <time datetime={publishedAt}>{date}</time>
      </div>
    </div>
  </a>
</article>